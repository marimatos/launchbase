{% extends "layoutAdmin.njk" %}

{% block head %}
  <title>Receita</title>
{% endblock %}

{% block content%}
<main>

  <div class="action-menu">
    <h1>Receita: {{recipe.title}}</h1>
    <a class="button-admin" href="#">Editar receita</a>
  </div>

  <section id="recipe">
    
    <img id="recipe-img" src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
      <h3>{{recipe.title}}</h3>
      <p>{{recipe.chef_name}}</p>
  </section>
  
  <section>
    <div class="recipe-description">
            <h3>Ingredientes
                <span class="span">esconder</span></h3>
            <div class="description">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>
                            {{ ingredient }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="recipe-description">
            <h3>Modo de preparo
                <span class="span">esconder</span></h3>
            <div class="description">
                <ul>
                    {% for preparo in recipe.preparation %}
                        <li>{{ preparo }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="recipe-description">
            <h3>Informações adicionais
                <span class="span">esconder</span></h3>
            <div class="description">
                <p>{{ recipe.information}}</p>
            </div>
        </div>

  </section>
</main>

<script src="/script.js"></script>

{%endblock%}
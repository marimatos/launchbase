{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section 
    class="avatar" 
    style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
  </section>

  <section class="details">
    <h3>Detalhes</h3>
    
    <div class="item">
      <div>Teacher</div>
      <div>{{teacher.name}}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{teacher.age}}</div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>{{teacher.degree}}</div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>{{"Presencial" if teacher.class_type == "P" else "A Distancia"}}</div>
    </div>

    <div class="item">
      <div>Aulas</div>
      <div>
        {% for area in teacher.areas%}
          <span>{{area}}</span>
        {% endfor %}
      </div>
    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{teacher.created_at}}</div>
    </div>

    <a href="#" class="button">Editar</a>
  </section>
</div>

{% endblock%}
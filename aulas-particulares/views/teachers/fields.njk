<div class="item">
      <div>Avatar URL</div>
      <div>
        <input 
          type="url" 
          name="avatar_url" 
          placeholder="http://"
          value="{{ teacher.avatar_url }}">
      </div>
    </div>
    
    <div class="item">
      <div>Nome</div>
      <div>
        <input 
          type="text" 
          name="name" 
          placeholder="Nome completo"
          value="{{ teacher.name }}">
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento:</div>
      <div>
        <input 
          type="date" 
          name="birth"
          value="{{ teacher.birth }}">
      </div>
    </div>

    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="degree">
          <option value="EM">Ensino médio completo</option>
          <option value="ES">Ensino superior completo</option>
          <option value="M">Mestrado</option>
          <option value="D">Doutorado</option>
        </select>
      </div>
    </div>

    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span>
          <input type="radio" name="class_type" value="P" 
          {% if teacher.class_type == "P" %}
            checked
          {% endif %}>
          Presencial
          </span>
        <span>
          <input type="radio" name="class_type" value="D"
          {% if teacher.class_type == "D" %}
          checked
          {% endif %}>
          Distancia
          </span>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input 
          type="text" 
          name="areas"
          value="{{ teacher.areas }}">
      </div>
    </div>

    <button type="submit">Salvar</button>
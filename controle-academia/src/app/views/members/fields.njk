<div class="item">
  <div>Avatar URL</div>
    <div>
      <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://"
        value="{{ member.avatar_url }}">
    </div>
  </div>
  
  <div class="item">
    <div>Nome</div>
    <div>
      <input 
        type="text" 
        name="name" 
        value="{{ member.name }}">
    </div>
  </div>

  <div class="item">
    <div>Email</div>
    <div>
      <input 
        type="email" 
        name="email" 
        value="{{ member.email }}">
    </div>
  </div>

  <div class="item">
    <div>Data de nascimento</div>
    <div>
      <input 
      type="date" 
      name="birth"
      value="{{ member.birth }}">
    </div>
  </div>

  <div class="item">
    <div>Sexo</div>
    <div>
      <span>
        <input 
          type="radio" 
          name="gender" 
          value="M"
          {% if member.gender == "M" %}
            checked
          {% endif %}>
          Masculino
      </span>
      <span>
        <input 
          type="radio" 
          name="gender" 
          value="F"
          {% if member.gender == "F" %}
            checked
          {% endif %}>
          Feminino
      </span>
    </div>
  </div>

  <div class="item">
    <div>Tipo sangu√≠neo</div>
    <div>
      <select name="blood">
        <option value="A+"
        {% if member.blood == "A+" %}selected{% endif %}>A+</option>
        <option value="A-"
        {% if member.blood == "A-" %}selected{% endif %}>A-</option>
        <option value="B+"
        {% if member.blood == "B+" %}selected{% endif %}>B+</option>
        <option value="B="
        {% if member.blood == "B-" %}selected{% endif %}>B-</option>
        <option value="AB+"
        {% if member.blood == "AB+" %}selected{% endif %}>AB+</option>
        <option value="AB-"
        {% if member.blood == "AB-" %}selected{% endif %}>AB-</option>
        <option value="0+"
        {% if member.blood == "0+" %}selected{% endif %}>0+</option>
        <option value="0-"
        {% if member.blood == "0-" %}selected{% endif %}>0-</option>
      </select>
    </div>
  <div>

  <div class="item">
    <div>Peso em kg</div>
    <div>
      <input 
      type="number" 
      name="weight"
      value="{{ member.weight }}">
    </div>
  </div>

  <div class="item">
    <div>Altura</div>
    <div>
      <input 
      type="number" 
      name="height"
      value="{{ member.height }}">
    </div>
  </div>
       
</div>

<button type="submit">Salvar</button>